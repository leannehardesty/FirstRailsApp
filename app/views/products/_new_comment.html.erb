
<div class="col-sm-6">
  <div class="commentsreview row">
  <% if signed_in? %>
    	<br>
      <h4>Add a review:</h4>
      <%= form_for([@product, @product.comments.build], remote: true) do |f| %>
        <p>
          
          <%= f.text_field :body, autocomplete: "off", autofocus: true, "size" => 40, class: "form-control", placeholder: "Add comments here"  %>
        </p>
        <p>
          <%= f.label :rating %>:
           
          <div class="rating"></div>
        </p> 

        <br>
        <p>
          <%= f.submit "Submit", class:"btn btn-primary" %>
        </p>


      <% end %>
  <% end %>

  </div>
</div>