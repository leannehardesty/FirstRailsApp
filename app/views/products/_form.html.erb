<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="row">
    <div class="signin">

    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name, required: true, class: 'form-control', value: @product.name %>  
    </div>
    <div class="field">
      <%= f.label :description %><br>
      <%= f.text_area :description, required: true, class: 'form-control', value: @product.description %>
    </div>
    <div class="field">
      <%= f.label :image_url %><br>
      <%= f.text_field :image_url, required: true, class: 'form-control', value: @product.image_url %>
    </div>
    <div class="field">
      <%= f.label :colour %><br>
      <%= f.text_field :colour, required: true, class: 'form-control', value: @product.colour %>
    </div>

    <div class="field">
      <%= f.label :price %>($)<br>
      <%= f.text_area :price, required: true, class: 'form-control', value: @product.price %>
    </div>

    <div class="actions">
       
      <%= f.submit "Update Product", class:"btn btn-primary" %>
    </div>

   </div>
  </div>
<% end %>
