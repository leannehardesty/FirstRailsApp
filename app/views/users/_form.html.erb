<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



  <%= form_tag("/users/signup_thank_you") do %>
   <div class="row">
    <div class="signin">

    
      <div class="field">
        <%= f.label :first_name, "First Name:" %>
        <%= f.text_field :first_name, required: true, class: 'form-control', value: @user.first_name %>
      </div>   

      <div class="field">
        <%= f.label :last_name, "Last Name:" %>
        <%= f.text_field :last_name, required: true, class: 'form-control', value: @user.last_name %>
      </div>  

      
      <div class="field">
        <%= f.label :email, "Email Address:" %>
        <%= f.text_field :email, required: true, class: 'form-control', value: @user.email %>
      </div>  

       
      <div class="field">
        <%= label_tag :password, "Password:" %>
        <%= f.text_field :password, required: false, class: 'form-control', value: @user.password %>
      </div>  


      <div class="actions">
          <%= f.submit "Update", class:"btn btn-primary" %>
      </div>

    </div>
  </div>

 <% end %>
<% end %>




 