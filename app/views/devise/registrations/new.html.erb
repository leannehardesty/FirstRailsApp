
<br><br>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>  



  <%= form_tag("/users/new_signup") do %>


    <div class="row">
      <div class="signin">
      <div class="col-sm-12">
        <h2>Sign Up for your Account:</h2>
          <div class="field">
            <%= f.email_field :email, autocomplete: "off", autofocus: true, class: "form-control", placeholder: "Email address"  %>
          </div>

          <div class="field">
            <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password (6 characters minimum)"%>
          </div>

          <div class="field">
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Password confirmation"%>
          </div>


    <div class="form-group">
      <%= label_tag :name, "Name" %>
      <%= text_field_tag :name, nil, class: "form-control", placeholder: "Enter Name" %>
    </div>      
     
    <div class="form-group">
      <%= label_tag :message, "Message" %>
      <%= text_area_tag :message, nil, class: "form-control", placeholder: "Enter Message" %>
    </div> 






          <div class="actions">
            <%= f.submit "Sign Up", class:"btn btn-primary" %>
          </div>


      </div>
      </div>
      <br>
    </div>

  <% end %>
<% end %>







   